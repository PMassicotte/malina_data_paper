issn = {1726-4189},
journal = {Biogeosciences},
month = {sep},
number = {9},
pages = {5911--5929},
title = {{Multivariate benthic ecosystem functioning in the Arctic – benthic fluxes explained by environmental parameters in the southeastern Beaufort Sea}},
