journal = {Biogeosciences},
month = {dec},
number = {6},
pages = {1751--1764},
title = {{Role of environmental factors for the vertical distribution (0–1000 m) of marine bacterial communities in the NW Mediterranean Sea}},
url = {https://bg.copernicus.org/articles/5/1751/2008/},
volume = {5},
year = {2008}
}
